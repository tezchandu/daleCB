    public static void callToken()
    {
        try{
            PushtoWebAccess__c acc = PushtoWebAccess__c.getInstance('API Access Token');
            system.debug(acc);
            system.debug('Before'+acc.Access_Token__c);
            system.debug('Before'+acc.Refresh_Token__c);
            string endPoint = acc.Auth_URL__c;
            Map<String, String> obj = new Map<String, String>();
            obj.put('refresh_token', acc.Refresh_Token__c);
            obj.put('grant_type', 'refresh_token');
            
            System.debug(JSON.Serialize(obj));
            HttpRequest req = new HttpRequest();
            req.setMethod('POST');
            req.setEndpoint(endPoint);
            req.setHeader('Content-Type', 'application/json');
            
            Map<String, String> credentials = new Map<String, String>();
            credentials.put('identifier', acc.Identifier__c);
            credentials.put('password', acc.Password__c);
            
            String requestBody = JSON.serialize(credentials);
            req.setBody(requestBody);
            
            Http http = new Http();
            HttpResponse response = http.send(req);
            System.debug('Status '+response.getStatusCode());
            System.debug('Status '+response.getStatus());
            System.debug('Resp Body '+response.getBody());
            if(response.getStatusCode() == 200)
            {
                AccessTokenResponseWrapper res = (AccessTokenResponseWrapper) JSON.deserialize(response.getBody(), AccessTokenResponseWrapper.class);
                system.debug('response.access_token '+res.jwt);
                acc.Access_Token__c = res.jwt;
                //acc.Refresh_Token__c = response.refresh_token;
                update acc;
                 system.debug('After'+acc.Access_Token__c);
                system.debug('After'+acc.Refresh_Token__c);
                
            }			
        }catch(Exception e)
        {
            system.debug('Exception at '+e.getLineNumber()+' '+e.getMessage());
        }
    }
